<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.landaojia.blogserver.dao.user.UserDao">
	<resultMap type="com.landaojia.blogserver.dao.user.User" id="result"/>
    <sql id="select_all_cols">
    	t_user.ID,
		t_user.uname as uname,
		t_user.pwd as pwd,
		t_user.CREATE_TIME as createTime,
		t_user.UPDATE_TIME as updateTime,
		t_user.VERSION 
    </sql>
    <sql id="insert_all_cols">
		t_user.uname,
		t_user.pwd,
		t_user.CREATE_TIME,
		t_user.UPDATE_TIME,
		t_user.VERSION 
    </sql>
    <sql id="where_all">
		WHERE 1=1
		<if test="cond.id != null">
			AND t_user.id = #{cond.id}
		</if>
		<if test="cond.uname != null">
			AND t_user.uname = #{cond.uname}
		</if>
		<if test="cond.pwd != null">
			AND t_user.pwd = #{cond.pwd}
		</if>
		<if test="cond.version != null">
			AND t_user.version = #{cond.version}
		</if>
		<if test="cond.ids != null">
			and t_user.id in
			<foreach item="item" index="index" collection="cond.ids" open="(" separator="," close=")">  
				#{item}  
 			</foreach> 
		</if>
		<if test="cond.createTimeB != null">
		<![CDATA[
			AND t_user.create_time >= #{cond.createTimeB}
		]]>
		</if>
		<if test="cond.createTimeE != null">
		<![CDATA[
			AND t_user.create_time <= #{cond.createTimeE}
		]]>
		</if>
		<if test="cond.updateTimeB != null">
		<![CDATA[
			AND t_user.update_time >= #{cond.updateTimeB}
		]]>
		</if>
		<if test="cond.updateTimeE != null">
		<![CDATA[
			AND t_user.update_time <= #{cond.updateTimeE}
		]]>
		</if>
    </sql>
	<select id="select" resultMap="result"> 
		select <include refid="select_all_cols"/>
		FROM t_user 
		WHERE t_user.ID=#{id}
		<if test="lock">
		FOR UPDATE
		</if>
	</select>
	<select id="query" resultMap="result">
		select <include refid="select_all_cols"/>
		FROM t_user 
		<include refid="where_all"/>
		<if test="start != null">
		order by t_user.create_time desc
		limit #{start},#{size}
		</if>
	</select>
	<select id="count" resultType="java.lang.Long">
		select count(0)
		FROM t_user 
		<include refid="where_all"/>
	</select>
	<select id="sum" resultType="java.math.BigDecimal">
		select sum(${col})
		FROM t_user 
		<include refid="where_all"/>
	</select>
	<insert id="insert" useGeneratedKeys="true" keyProperty="id" >
		INSERT INTO t_user(<include refid="insert_all_cols"/>)
			VALUES
				(
					#{uname},
					#{pwd},
					current_timestamp(),current_timestamp(),1
				)
	</insert>
	<insert id="batchInsert">
		INSERT INTO t_user(<include refid="insert_all_cols"/>)
			VALUES
			<foreach item="item" index="index" collection="list" open="" separator="," close="">
				(
					#{item.uname},
					#{item.pwd},
					current_timestamp(),current_timestamp(),1
				)
			</foreach>
	</insert>
	<insert id="insertWithId">
		INSERT INTO t_user(ID,<include refid="insert_all_cols"/>)
			VALUES
				(#{id},
					#{uname},
					#{pwd},
					current_timestamp(),current_timestamp(),1
				)
	</insert>
	<insert id="batchInsertWithId">
		INSERT INTO t_user(ID,<include refid="insert_all_cols"/>)
			VALUES
			<foreach item="item" index="index" collection="list" open="" separator="," close="">
				(#{item.id},
					#{item.uname},
					#{item.pwd},
					current_timestamp(),current_timestamp(),1
				)
			</foreach>
	</insert>
	<update id="update">
		update t_user
		<set>
			uname = #{uname},
			pwd = #{pwd},
			id = #{id},
			version = version + 1,
			update_time = current_timestamp()
		</set>
		where t_user.id = #{id} and t_user.version = #{version}
	</update>
	<delete id="delete">
		delete from t_user
		<include refid="where_all"/>
	</delete>
	<delete id="deleteById">
		delete from t_user where t_user.id = #{id}
	</delete>
</mapper>
