<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="${pkg}.${table.className}Dao">
    <resultMap type="${pkg}.${table.className}" id="result"/>
    <sql id="select_all_cols">
        #set($p=".")
        #set($d="$")
        ${table.fullName}.ID,
        #foreach( ${col} in ${table.cols} )
        ${table.fullName}.${col.colName} as ${col.fieldName},
        #end
        ${table.fullName}.CREATE_DATE as createDate,
        ${table.fullName}.UPDATE_DATE as updateDate,
        ${table.fullName}.CREATE_BY as createBy,
        ${table.fullName}.UPDATE_BY as updateBy,
        ${table.fullName}.VERSION
    </sql>
    <sql id="insert_all_cols">
        #foreach( ${col} in ${table.cols} )
        ${table.fullName}.${col.colName},
        #end
        ${table.fullName}.DELETED_FLAG,
        ${table.fullName}.CREATE_DATE,
        ${table.fullName}.UPDATE_DATE,
        ${table.fullName}.CREATE_BY,
        ${table.fullName}.UPDATE_BY,
        ${table.fullName}.VERSION
    </sql>
    <sql id="where_all">
        WHERE DELETED_FLAG=0
        <if test="cond.id != null">
            AND ${table.fullName}.id = #{cond.id}
        </if>
        #foreach( ${col} in ${table.cols} )
        <if test="cond.${col.fieldName} != null">
            AND ${table.fullName}.${col.colName} = #{cond${p}${col.fieldName}}
        </if>
        #if( ${col.needInCond} )
        <if test="cond.${col.fieldName}s != null">
            AND ${table.fullName}.${col.colName} in
            <foreach item="item" index="index" collection="cond${p}${col.fieldName}s" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
        #end
        #end
        <if test="cond.version != null">
            AND ${table.fullName}.version = #{cond.version}
        </if>
        <if test="cond.ids != null">
            and ${table.fullName}.id in
            <foreach item="item" index="index" collection="cond.ids" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
        <if test="cond.createDateB != null">
            <![CDATA[
			AND ${table.fullName}.CREATE_DATE >= #{cond.createDateB}
		]]>
        </if>
        <if test="cond.createDateE != null">
            <![CDATA[
			AND ${table.fullName}.CREATE_DATE <= #{cond.createDateE}
		]]>
        </if>
        <if test="cond.updateDateB != null">
            <![CDATA[
			AND ${table.fullName}.UPDATE_DATE >= #{cond.updateDateB}
		]]>
        </if>
        <if test="cond.updateDateE != null">
            <![CDATA[
			AND ${table.fullName}.UPDATE_DATE <= #{cond.updateDateE}
		]]>
        </if>
    </sql>
    <select id="select" resultMap="result">
        select <include refid="select_all_cols"/>
        FROM ${table.fullName}
        WHERE DELETED_FLAG=0 and ${table.fullName}.ID=#{id}
        <if test="lock">
            FOR UPDATE
        </if>
    </select>
    <select id="query" resultMap="result">
        select <include refid="select_all_cols"/>
        FROM ${table.fullName}
        <include refid="where_all"/>
        <if test="start != null">
            order by ${table.fullName}.CREATE_DATE desc
            limit #{start},#{size}
        </if>
    </select>
    <select id="count" resultType="java.lang.Long">
        select count(0)
        FROM ${table.fullName}
        <include refid="where_all"/>
    </select>
    <select id="sum" resultType="java.math.BigDecimal">
        select sum(${col})
        FROM ${table.fullName}
        <include refid="where_all"/>
    </select>
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" >
        INSERT INTO ${table.fullName}(<include refid="insert_all_cols"/>)
        VALUES
        (
        #foreach( ${col} in ${table.cols} )
        #{${col.fieldName}},
        #end
        0,current_timestamp(),current_timestamp(),#{createBy},#{updateBy},1
        )
    </insert>
    <insert id="batchInsert">
        INSERT INTO ${table.fullName}(<include refid="insert_all_cols"/>)
        VALUES
        <foreach item="item" index="index" collection="list" open="" separator="," close="">
            (
            #foreach( ${col} in ${table.cols} )
            #{item.${col.fieldName}},
            #end
            0,current_timestamp(),current_timestamp(),#{createBy},#{updateBy},1
            )
        </foreach>
    </insert>
    <insert id="insertWithId">
        INSERT INTO ${table.fullName}(ID,<include refid="insert_all_cols"/>)
        VALUES
        (#{id},
        #foreach( ${col} in ${table.cols} )
        #{${col.fieldName}},
        #end
        0,current_timestamp(),current_timestamp(),#{createBy},#{updateBy},1
        )
    </insert>
    <insert id="batchInsertWithId">
        INSERT INTO ${table.fullName}(ID,<include refid="insert_all_cols"/>)
        VALUES
        <foreach item="item" index="index" collection="list" open="" separator="," close="">
            (#{item.id},
            #foreach( ${col} in ${table.cols} )
            #{item.${col.fieldName}},
            #end
            0,current_timestamp(),current_timestamp(),#{createBy},#{updateBy},1
            )
        </foreach>
    </insert>
    <update id="update">
        update ${table.fullName}
        <set>
            #foreach( ${col} in ${table.cols} )
            ${col.colName} = #{${col.fieldName}},
            #end
            id = #{id},
            version = version + 1,
            UPDATE_DATE = current_timestamp(),
            UPDATE_BY=#{updateBy}
        </set>
        where ${table.fullName}.id = #{id} and ${table.fullName}.version = #{version}
    </update>
    <delete id="delete">
        update ${table.fullName} set DELETED_FLAG=1
        <include refid="where_all"/>
    </delete>
    <delete id="deleteById">
        update ${table.fullName} set DELETED_FLAG=1 where ${table.fullName}.id = #{id}
    </delete>
</mapper>